@model List<UserInfo>
@{
    ViewBag.Title = "Toplantı Katılım Listesi";
}
<main class="text-center">
    <h1 class="h4">Toplantıya Katılım Listesi</h1>
    <table class="table table-bordered ">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durumu</td>
                <td>Detay</td>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}

            @foreach (var users in Model)
            {
                var durum = users.WillAttend == true ? "Evet" : "Hayır";
                var className = users.WillAttend == true ? "table-info" : "table-danger";

                if( durum == "Evet")
                {
                    i++; 
                }

                <tr class="@className">
                    <td>@users.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@users.Id">Detay</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <p>Katılımcı Sayısı: @i</p>
        </div>

    </div>
</main>